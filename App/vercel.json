{
  "version": 2,
  "builds": [
    {
      "src": "DailyDude/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "cd DailyDude && npm install && npm run build"
      }
    },
    {
      "src": "DailyDudeBackend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "DailyDudeBackend/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "DailyDude/dist/$1"
    }
  ]
}
